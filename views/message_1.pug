      //- .chat-messages.has-text-left
        
      .send-mes
        form
          div
            input#chat.message(type='text' name='chat' bind:value='{userMessage}' placeholder='Сообщение')
          button.send(type='submit' on:sub='{sendHandler}')
            img.send-p(src='./img/Email.svg' alt='Отправить')
      .chat
        #chat-messages
  script.
    const socket = io();
    let all_msg = true
    //- const name = message_info
    const name = "user"
    console.log(name)
    $('form').submit(function() {
        //- const name = $('#first_name').val();
        const message = $('#chat').val();
        socket.emit('chatter', `${message}`);
        $('#chat').val('');
        return false; 
      });

      socket.on('chatter', function(message) {
        console.log("OK")
        $('#chat-messages').append($('<li>').text(name + ": " + message));
      });
        //- br
          //- //p.(class="{message.author === 'user' ? 'message_right' : 'message_left'}")
        //-br
      if (all_msg == true)
      {
        all_msg = false
        socket.emit('all_msg');
        socket.on('all_msg', function(message) {
          $('#chat-messages').empty()
          console.log("all_msg")
          let len = message.length
          for (let i = 0; i < len; i+=1)
          {
            if (message[i].first_name == name)
            {
              $('#chat-messages').append($('<li>').text(name + ": " + message[i].message));
            }
            else 
            {
              $('#chat-messages').append($('<li>').text(name + ": " + message[i].message));
            }
          }
        })
      }
  .r-column
